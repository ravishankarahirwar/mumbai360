<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mumbai.d360">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.Mumbai360"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity
            android:name=".activity.UpDownActivity"
            android:label="@string/title_activity_up_down"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mumbai.d360.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.TrainScheduleActivity"
            android:label="@string/title_activity_train_schedule"
            android:parentActivityName=".activity.UpDownActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mumbai.d360.activity.UpDownActivity" />
        </activity>

        <service android:name=".notification.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".notification.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <activity
            android:name=".activity.LanguagePreferenceActivity"
            android:label="@string/title_activity_language_preference"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".activity.TutorialScreensActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".forum.MainActivity"
            android:label="Roadpali Forum"
            android:theme="@style/Theme.Roadpali" />
        <activity
            android:name=".forum.NewPostActivity"
            android:label="Now Post"
            android:theme="@style/Theme.Roadpali" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".forum.MainActivity" />
        </activity>
        <activity
            android:name=".forum.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".forum.PostDetailActivity"
            android:label="Post Detail"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden"
            android:theme="@style/Theme.Roadpali" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".forum.MainActivity" />
        </activity>

        <activity
            android:name=".forum.ResetPasswordActivity"
            android:label="@string/title_activity_reset_password"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>